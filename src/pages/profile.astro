---
import Layout from '../layouts/Layout.astro';
import RecentProjects from '@/components/RecentProjects.astro';
import SidebySide from '@/components/SidebySide.astro';
import BackgroundImage from '@/assets/images/developer-mug.jpg';

const title = 'Profile';
const description =
  'I help forward-thinking companies build performant, accessible, and beautiful web applications using the modern React ecosystem.';
