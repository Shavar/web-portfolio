---
import Layout from '../layouts/Layout.astro';
import projectsData from '@/data/projects.json';
import projectImage from '@/assets/images/projects.jpg';

const title = 'Projects';
const description =
  'A comprehensive look at my development projects, showcasing modern web applications and innovative solutions.';
---

<Layout title={title} description={description} hasHero heroImage={projectImage}>
  <div class="mx-auto max-w-6xl px-6 py-16">
    <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-12">
      <div class="md:col-span-2">
        <h2
          class="sticky top-24 inline-block text-sm font-semibold uppercase leading-tight tracking-widest text-secondary-text dark:text-gray-400"
        >
          Work History
        </h2>
      </div>

      <div class="md:col-span-10">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          {
            projectsData.projects.map((project) => (
              <div class="group">
                <a href={`/project/${project.id}`} class="block">
                  <div class="rounded-lg border border-zinc-200 bg-white p-8 shadow-sm transition-all hover:border-zinc-300 hover:shadow-lg dark:border-zinc-800 dark:bg-zinc-900 dark:hover:border-zinc-700">
                    <h2 class="mb-4 text-lg font-bold text-zinc-900 transition-colors group-hover:text-blue-600 dark:text-white">
                      {project.title}
                    </h2>
                    <p class="mb-6 text-sm text-zinc-700 dark:text-zinc-300">
                      {project.description}
                    </p>
                    <div class="mb-6 flex flex-wrap gap-2">
                      {project.tags.map((tag) => (
                        <span class="rounded-full bg-zinc-100 px-3 py-1 text-sm text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <div class="flex items-center font-medium text-blue-600 dark:text-blue-400">
                      Learn more
                      <svg
                        class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </div>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-12">
      <div class="md:col-span-3">
        <h2
          class="sticky top-24 inline-block text-sm font-semibold uppercase leading-tight tracking-widest text-secondary-text dark:text-gray-400"
        >
          Client Work
        </h2>
      </div>

      <div class="md:col-span-9">
        <div class="grid grid-cols-1 gap-12 md:grid-cols-2">
          {
            projectsData.projects.map((project) => (
              <div class="group">
                <a href={`/project/${project.id}`} class="block">
                  <div class="rounded-2xl border border-zinc-200 bg-white p-8 shadow-sm transition-all hover:border-zinc-300 hover:shadow-lg dark:border-zinc-800 dark:bg-zinc-900 dark:hover:border-zinc-700">
                    <h2 class="mb-4 text-2xl font-bold text-zinc-900 transition-colors group-hover:text-blue-600 dark:text-white">
                      {project.title}
                    </h2>
                    <p class="mb-6 text-zinc-700 dark:text-zinc-300">{project.description}</p>
                    <div class="mb-6 flex flex-wrap gap-2">
                      {project.tags.map((tag) => (
                        <span class="rounded-full bg-zinc-100 px-3 py-1 text-sm text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <div class="flex items-center font-medium text-blue-600 dark:text-blue-400">
                      Learn more
                      <svg
                        class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </div>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div></Layout
>
