---
import Layout from '../../layouts/Layout.astro';
import projectsData from '@/data/projects.json';
import type { ImageMetadata } from 'astro';

export async function getStaticPaths() {
  return projectsData.projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: (typeof projectsData.projects)[0];
}

const { project } = Astro.props;

// Import the project image dynamically
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*');
const projectImage = await images[project.image]?.();

const pagePayload = {
  title: project.title,
  description: project.shortDescription,
  heroImage: projectImage?.default,
};
---

<Layout {...pagePayload}>
  <div class="mx-auto max-w-6xl px-6 py-16">
    <!-- Project Overview -->
    <div class="mb-16 grid grid-cols-1 gap-12 lg:grid-cols-3">
      <div class="lg:col-span-2">
        <h2 class="mb-6 text-2xl font-bold text-zinc-900 dark:text-white">Project Overview</h2>
        <p class="mb-8 text-lg leading-relaxed text-zinc-700 dark:text-zinc-300">
          {project.description}
        </p>

        <!-- Features -->
        <h3 class="mb-4 text-xl font-semibold text-zinc-900 dark:text-white">Key Features</h3>
        <ul class="mb-8 space-y-3">
          {
            project.features.map((feature) => (
              <li class="flex items-start">
                <svg
                  class="mr-3 mt-1 h-5 w-5 flex-shrink-0 text-green-500"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-zinc-700 dark:text-zinc-300">{feature}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Project Info Sidebar -->
      <div class="space-y-8">
        <!-- Links -->
        <div>
          <h3 class="mb-4 text-lg font-semibold text-zinc-900 dark:text-white">Project Links</h3>
          <div class="space-y-3">
            {
              project.liveUrl && (
                <a
                  href={project.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center rounded-lg bg-blue-600 px-4 py-2 text-white transition-colors hover:bg-blue-700"
                >
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                  View Live Site
                </a>
              )
            }
            {
              project.githubUrl && (
                <a
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center rounded-lg border border-zinc-300 px-4 py-2 text-zinc-700 transition-colors hover:bg-zinc-50 dark:border-zinc-700 dark:text-zinc-300 dark:hover:bg-zinc-800"
                >
                  <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.300 24 12c0-6.627-5.373-12-12-12z" />
                  </svg>
                  View Code
                </a>
              )
            }
          </div>
        </div>

        <!-- Technologies -->
        <div>
          <h3 class="mb-4 text-lg font-semibold text-zinc-900 dark:text-white">Technologies</h3>
          <div class="flex flex-wrap gap-2">
            {
              project.tags.map((tag) => (
                <span class="rounded-full bg-zinc-100 px-3 py-1 text-sm text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300">
                  {tag}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Technical Deep Dive -->
    {
      project.technologies.length > 0 && (
        <div class="mb-16">
          <h2 class="mb-8 text-2xl font-bold text-zinc-900 dark:text-white">Technical Deep Dive</h2>
          <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {project.technologies.map((tech) => (
              <div class="rounded-lg border border-zinc-200 p-6 dark:border-zinc-800">
                <h3 class="mb-2 font-semibold text-zinc-900 dark:text-white">{tech.name}</h3>
                <p class="text-sm text-zinc-600 dark:text-zinc-400">{tech.description}</p>
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Challenges & Solutions -->
    {
      project.challenges.length > 0 && (
        <div class="mb-16">
          <h2 class="mb-8 text-2xl font-bold text-zinc-900 dark:text-white">
            Challenges & Solutions
          </h2>
          <div class="space-y-8">
            {project.challenges.map((challenge, index) => (
              <div class="border-l-4 border-blue-500 pl-6">
                <h3 class="mb-2 font-semibold text-zinc-900 dark:text-white">
                  Challenge {index + 1}: {challenge.problem}
                </h3>
                <p class="text-zinc-700 dark:text-zinc-300">{challenge.solution}</p>
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Results -->
    {
      project.results.length > 0 && (
        <div>
          <h2 class="mb-8 text-2xl font-bold text-zinc-900 dark:text-white">Results & Impact</h2>
          <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
            {project.results.map((result, index) => (
              <div class="rounded-lg bg-gradient-to-br from-blue-50 to-indigo-50 p-6 text-center dark:from-zinc-800 dark:to-zinc-900">
                <div class="mb-2 text-2xl font-bold text-blue-600 dark:text-blue-400">
                  {index + 1}
                </div>
                <p class="text-zinc-700 dark:text-zinc-300">{result}</p>
              </div>
            ))}
          </div>
        </div>
      )
    }
  </div>
</Layout>
