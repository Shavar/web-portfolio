---
import Layout from '@/layouts/Layout.astro';
import ExperienceComponent from '@/components/Experience.astro';

// Import JSON data
import experiences from '@/data/experience.json';
import styles from '@/data/styles.json';

const pagePayload = {
  preHeading: "Hi, I'm Sean",
  title: 'Experience',
  description:
    "A chronological overview of my professional career, the roles I've held, and the technical expertise I've cultivated along the way.",
};
---

<Layout {...pagePayload}>
  <section class={`${styles.container} py-16`}>
    <ExperienceComponent title="Work History" experiences={experiences.workExperience} />
    <ExperienceComponent title="Education" experiences={experiences.education} />
  </section>

  <section class={`${styles.container} py-16`}>
    <div
      class="relative overflow-hidden rounded-[2.5rem] bg-zinc-900 p-8 text-white shadow-2xl md:p-16"
    >
      <div
        class="absolute right-0 top-0 -mr-20 -mt-20 h-96 w-96 rounded-full bg-zinc-800 opacity-50 blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 -mb-20 -ml-20 h-96 w-96 rounded-full bg-zinc-800 opacity-50 blur-3xl"
      >
      </div>
      <div
        class="relative z-10 flex flex-col items-start justify-between gap-12 xl:flex-row xl:items-center"
      >
        <div class="xl:w-1/3">
          <span
            class="mb-6 inline-block rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-wider text-zinc-300"
            >Skills</span
          >
          <h2 class="mb-6 text-3xl font-bold md:text-5xl">My Toolbox</h2>
          <p class="text-lg leading-relaxed text-zinc-400">
            The technologies and tools I rely on to bring creative ideas to life on the web. Always
            learning, always evolving.
          </p>
        </div>
        <div class="grid w-full grid-cols-2 gap-4 sm:grid-cols-4 xl:w-2/3">
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >html</span
            >
            <div class="font-semibold">React</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >css</span
            >
            <div class="font-semibold">Tailwind</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >javascript</span
            >
            <div class="font-semibold">TypeScript</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >database</span
            >
            <div class="font-semibold">PostgreSQL</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >cloud</span
            >
            <div class="font-semibold">AWS</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >brush</span
            >
            <div class="font-semibold">Figma</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >code_blocks</span
            >
            <div class="font-semibold">Next.js</div>
          </div>
          <div
            class="group rounded-2xl border border-white/5 bg-white/5 p-6 text-center backdrop-blur-sm transition-colors hover:bg-white/10"
          >
            <span
              class="mb-3 text-3xl transition-transform material-symbols-outlined group-hover:scale-110"
              >terminal</span
            >
            <div class="font-semibold">Git</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
