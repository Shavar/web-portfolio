---
import Layout from '@/layouts/Layout.astro';
import ExperienceComponent from '@/components/molecules/Experience.astro';
import experiences from '@/data/experiences.json';
import education from '@/data/education.json';
import styles from '@/data/styles.json';

const pagePayload = {
  preHeading: "Hi, I'm Sean",
  title: 'Professional Experience',
  description:
    '8+ years of frontend development experience at leading companies. View my career progression, technical skills, and education in React, TypeScript, and Next.js.',
};
---

<Layout {...pagePayload}>
  <section class={`${styles.container} py-10 md:py-12`}>
    <ExperienceComponent title="Work History" experiences={experiences} />
    <ExperienceComponent title="Education" experiences={education} />
  </section>
</Layout>
