---
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/shared/Button.astro';
---

<Layout
  title="404 - Page Not Found"
  description="The page you're looking for could not be found."
  showHeader={true}
  showFooter={true}
>
  <div class="flex min-h-screen items-center justify-center px-6">
    <div class="text-center">
      <div class="mb-8">
        <h1 class="text-primary-text text-6xl font-bold dark:text-white">404</h1>
        <div class="bg-primary mx-auto mt-4 h-1 w-16 rounded"></div>
      </div>

      <h2 class="text-primary-text mb-4 text-2xl font-semibold dark:text-white">Page Not Found</h2>

      <p class="text-secondary-text mb-8 max-w-md text-lg dark:text-gray-300">
        The page you're looking for doesn't exist or has been moved to a different location.
      </p>

      <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
        <Button href="/" style="primary"> Back to Home </Button>

        <Button href="/projects" style="secondary"> View Projects </Button>
      </div>
    </div>
  </div>
</Layout>
