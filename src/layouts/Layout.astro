---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

// Import JSON data
import globalData from '@/data/global.json';

// Import CSS variables
import '@/styles/variables.css';

interface Props {
  title: string;
  description: string;
  showHeader?: boolean;
  showFooter?: boolean;
  hasHero?: boolean;
}

const { title, description, showHeader = true, showFooter = true, hasHero = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Google Fonts preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Import fonts used in Tailwind config -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Poppins:wght@300;400;500;600;700&family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- Open Graph tags for social sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body class="bg-primary-bg text-primary dark:text-white font-body transition-colors duration-300">
    {showHeader && <Header links={globalData.header} socials={globalData.socials} />}

    <main class:list={['min-h-screen', { 'mt-20': hasHero }]}>
      <slot />
    </main>

    {showFooter && <Footer copyright={globalData.footer.copyright} socials={globalData.socials} />}
  </body>
</html>
