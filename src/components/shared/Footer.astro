---
// Footer component
import type { SocialLink } from '@/types';
import Button from '@/components/shared/Button.astro';
import classes from '@/data/styles.json';

interface Props {
  socials: SocialLink[];
  copyright: string;
}

const { socials, copyright } = Astro.props;
---

<footer>
  <section
    class="py-24 px-6 bg-white dark:bg-background-dark border-t border-gray-100 dark:border-gray-800 relative overflow-hidden"
    id="contact"
  >
    <div class={classes.container}>
      <div class="flex flex-col items-center text-center mb-12">
        <span class={classes.preHeading}>Get in Touch</span>
        <h2 class={classes.heading}>Let's work together</h2>
        <p class={classes.secondaryText}>
          I'm currently available for freelance work and open to full-time opportunities.
        </p>
        <div class="pt-8 flex flex-col items-center gap-6">
          <Button style="primary" href="#">
            <i class="fab fa-linkedin mr-3 text-2xl"></i>
            Connect on LinkedIn
          </Button>
          <Button style="tertiary" href="#"> Or just say hello via email </Button>
        </div>
      </div>
      <div class="pt-16 flex flex-col md:flex-row justify-between items-center gap-6">
        <p class="text-gray-400 text-xs order-2 md:order-1">
          {copyright}
        </p>
        <div class="flex gap-6 order-1 md:order-2">
          {
            socials.map((social: SocialLink) => {
              return (
                <a
                  aria-label={social.label}
                  class="transition-colors"
                  href={social.href}
                  target={social.target}
                >
                  <i class={social.faIcon + ' text-xl'} />
                </a>
              );
            })
          }
        </div>
      </div>
    </div>
  </section>
</footer>
