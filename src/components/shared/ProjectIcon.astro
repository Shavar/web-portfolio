---
import Icon from '@/components/atoms/Icon.astro';

const { icon, link } = Astro.props;
---

<a
  class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-100 transition-colors hover:bg-blue-500 hover:text-white dark:bg-gray-700"
  href={link}
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon name="GitHub" class="h-4 w-4" width="16" height="16" />
</a>
