---
import classes from '@/data/styles.json';
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
interface Props {
  preheading?: string;
  heading: string;
  description: string;
  backgroundImage?: ImageMetadata;
}

const { preheading, heading, description, backgroundImage } = Astro.props;
---

<section class="relative">
  {
    backgroundImage && (
      <Image
        src={backgroundImage}
        alt="Background"
        class="absolute inset-0 w-full h-full object-cover -z-10"
      />
      <div class="absolute inset-0 bg-primary-bg opacity-50"></div>
    )
  }
  
  <div class:list={[classes.container, { 'pt-64': backgroundImage }, 'pb-8',]}>
    <div class="flex flex-col items-start text-left space-y-2">
      {preheading && <span class={classes.preHeading}>{preheading}</span>}
      <h1 class={classes.sectionHeading}>
        {heading}
      </h1>
      <p class="text-base text-secondary-text dark:text-gray-300 max-w-3xl leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>
