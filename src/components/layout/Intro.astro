---
import classes from '@/data/commonClasses.json';

interface Props {
  preheading?: string;
  heading: string;
  description: string;
}

const { preheading, heading, description } = Astro.props;
---

<section
  class="bg-[url('https://images.unsplash.com/photo-1766039132515-ea88dc3950bd?q=80&w=3088&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)')] bg-cover bg-center"
>
  <div class="absolute inset-0 bg-primary-bg opacity-50"></div>
  <div class={`${classes.container} pt-64 pb-8`}>
    <div class="flex flex-col items-start text-left space-y-2">
      {preheading && <span class={classes.preHeading}>{preheading}</span>}
      <h1 class={classes.sectionHeading}>
        {heading}
      </h1>
      <p class="text-base text-secondary-text dark:text-gray-300 max-w-3xl leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>
