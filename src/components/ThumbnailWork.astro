---
import ProjectIcon from './shared/ProjectIcon.astro';

interface Props {
  title: string;
  shortDescription: string;
  tags: string[];
  githubUrl?: string;
  liveUrl?: string;
  id: string;
}
const { id, title, shortDescription, tags, githubUrl, liveUrl } = Astro.props;
---

<article class="group cursor-pointer md:row-span-2 h-full">
  <div
    class="rounded-md overflow-hidden bg-red dark:bg-card-dark shadow-lg h-full relative border border-gray-100 dark:border-gray-800"
  >
    <div class="h-64 overflow-hidden relative">
      <img
        alt="Project One Dashboard Screenshot"
        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
        src="https://plus.unsplash.com/premium_photo-1766341850481-5bb38d040ab0?q=80&w=1035&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      />
      <div
        class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
      >
        <button
          class="px-8 py-3 bg-white text-black rounded-full font-bold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300"
        >
          View Case Study
        </button>
      </div>
    </div>
    <div class="px-4 py-6">
      <div class="flex justify-between items-start">
        <div>
          <h3
            class="text-lg font-bold text-primary dark:text-white mb-3 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"
          >
            {title}
          </h3>
        </div>
        <div class="flex flex-row justify-end ml-auto gap-2">
          {githubUrl && <ProjectIcon icon="fab fa-github" link={githubUrl} />}
          {liveUrl && <ProjectIcon icon="fa-solid fa-arrow-up-right-from-square" link={liveUrl} />}
        </div>
      </div>
      <p class="text-secondary-text dark:text-gray-400 text-sm leading-relaxed mb-6 line-clamp-3">
        {shortDescription}
      </p>
      <div class="h-px w-full bg-gray-200 dark:bg-gray-700 my-4"></div>
      <div class="mt-auto flex items-center justify-between">
        <div class="flex gap-2 flex-wrap">
          {
            tags.map((tag, tagIndex) => (
              <>
                <span class="text-xs font-mono text-gray-400 dark:text-gray-500">{tag}</span>
                {tagIndex < tags.length - 1 && (
                  <span class="text-xs font-mono text-gray-400 dark:text-gray-500">â€¢</span>
                )}
              </>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</article>
