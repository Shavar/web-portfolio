---
import classes from '@/data/styles.json';

interface Props {
  preHeading?: string;
  heading: string | string[];
  subHeading?: string;
  headingLevel?: 'h1' | 'h2' | 'h3' | 'h4';
  colorOverride?: string;
}

const { heading, subHeading, preHeading, headingLevel = 'h2', colorOverride = '' } = Astro.props;
const HeadingTag = headingLevel;
const isArray = Array.isArray(heading);
---

<>
  {preHeading && <span class={`${classes.preHeading} ${colorOverride || ''}`}>{preHeading}</span>}
  <HeadingTag class={classes.heading}>
    {
      isArray ? (
        heading.map((text, index) =>
          index % 2 === 0 ? <span>{text}</span> : <span class="text-quaternary">{text}</span>
        )
      ) : (
        <span>{heading}</span>
      )
    }
  </HeadingTag>
  {subHeading && <span class={`${classes.subHeading} ${colorOverride || ''}`}>{subHeading}</span>}
</>
