---
import ProjectIcon from './shared/ProjectIcon.astro';
interface Props {
  title: string;
  shortDescription: string;
  tags: string[];
  githubUrl?: string;
  liveUrl?: string;
  id: string;
  icon: string;
}
const { id, icon, title, shortDescription, tags, githubUrl, liveUrl } = Astro.props;
---

<article
  class="group relative flex h-full flex-col overflow-hidden rounded-md border border-gray-200 bg-white px-4 py-6 shadow-sm transition-all duration-500 hover:-translate-y-1 hover:shadow-xl md:flex-row dark:border-gray-800 dark:bg-card-dark"
>
  <div class="flex flex-1 flex-col justify-start">
    <div class="mb-4">
      <div class="flex flex-row">
        <span class="mb-6 text-5xl text-primary material-symbols-outlined dark:text-white"
          >{icon}</span
        >
        <div class="ml-auto flex flex-row justify-end gap-2">
          {githubUrl && <ProjectIcon icon="fab fa-github" link={githubUrl} />}
          {liveUrl && <ProjectIcon icon="fa-solid fa-arrow-up-right-from-square" link={liveUrl} />}
        </div>
      </div>
      <a href={`/project/${id}`} class="block">
        <h3
          class="mb-3 text-lg font-bold text-primary transition-colors group-hover:text-purple-600 dark:text-white dark:group-hover:text-purple-400"
        >
          {title}
        </h3>
        <p class="mb-6 text-sm leading-relaxed text-secondary-text dark:text-gray-400">
          {shortDescription}
        </p>
      </a>

      <div class="my-4 h-px w-full bg-gray-200 dark:bg-gray-700"></div>

      <div class="mt-auto flex items-center justify-between">
        <div class="flex flex-wrap gap-2">
          {
            tags.map((tag, tagIndex) => (
              <>
                <span class="font-mono text-xs text-gray-400 dark:text-gray-500">{tag}</span>
                {tagIndex < tags.length - 1 && (
                  <span class="font-mono text-xs text-gray-400 dark:text-gray-500">â€¢</span>
                )}
              </>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</article>
