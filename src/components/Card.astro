---
import styles from '@/data/styles.json';
interface Props {
  icon: string;
  title: string;
  description: string;
  offset?: boolean;
}
const { icon, title, description, offset } = Astro.props;
---

<div
  class={`border-border-tertiary bg-card-primary group rounded-xl border p-6 transition-all space-y-4 hover:-translate-y-1 ${offset ? 'md:mt-12' : ''}`}
>
  <div
    class="bg-tertiary flex h-12 w-12 items-center justify-center rounded-xl transition-transform group-hover:scale-110"
  >
    <span class="material-symbols-outlined">{icon}</span>
  </div>
  <h4 class="text-xl font-bold">{title}</h4>
  <p class={styles.cardText}>
    {description}
  </p>
</div>
