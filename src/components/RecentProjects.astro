---
import classes from '@/data/styles.json';
import projectsData from '@/data/projects.json';
import ThumbnailProject from '@/components/ThumbnailProject.astro';
const projects = projectsData.projects.slice(0, 3); // Show only first 2 projects
---

<section class="bg-gray-50 py-24 dark:bg-[#181818]">
  <div class={classes.container}>
    <div class="mb-16 flex flex-col items-end justify-between gap-6 md:flex-row">
      <div class="flex-1 text-left">
        <span class={classes.preHeading}>Portfolio</span>
        <h2 class={classes.heading}>Recent Projects</h2>
        <p class={`${classes.secondaryText} pb-0`}>
          A showcase of my latest work, featuring modern web applications and innovative solutions.
        </p>
      </div>
      <div class="flex w-[175px] justify-start md:justify-end">
        <a
          class="border-primary text-primary hover:border-secondary-text hover:text-secondary-text group inline-flex items-center gap-2 border-b-2 pb-1 font-semibold transition-all dark:border-white dark:text-white dark:hover:border-gray-300 dark:hover:text-gray-300"
          href="/projects"
        >
          View All Projects
          <span
            class="material-symbols-outlined text-xl transition-transform group-hover:translate-x-1"
            >arrow_right_alt</span
          >
        </a>
      </div>
    </div>
    <div class="grid grid-cols-1 items-start gap-8 md:grid-cols-3">
      {
        projects.map((project) => (
          <ThumbnailProject
            id={project.id}
            icon={project.icon}
            title={project.title}
            shortDescription={project.shortDescription}
            tags={project.tags}
            githubUrl={project.githubUrl}
            liveUrl={project.liveUrl}
          />
        ))
      }
    </div>
  </div>
</section>
