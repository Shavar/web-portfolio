---
import classes from '@/data/styles.json';
import projectsData from '@/data/projects.json';
import ThumbnailProject from '@/components/ThumbnailProject.astro';
const projects = projectsData.projects.slice(0, 3); // Show only first 2 projects
---

<section class="py-24 px-6 bg-gray-50 dark:bg-[#181818]">
  <div class={classes.container}>
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
      <div class="text-left flex-1">
        <span class={classes.preHeading}>Portfolio</span>
        <h2 class={classes.heading}>Recent Projects</h2>
        <p class={`${classes.secondaryText} pb-0`}>
          A showcase of my latest work, featuring modern web applications and innovative solutions.
        </p>
      </div>
      <div class="flex justify-start md:justify-end w-[175px]">
        <a
          class="group inline-flex items-center gap-2 text-primary dark:text-white font-semibold border-b-2 border-primary dark:border-white pb-1 hover:text-secondary-text dark:hover:text-gray-300 hover:border-secondary-text dark:hover:border-gray-300 transition-all"
          href="/projects"
        >
          View All Projects
          <span
            class="material-symbols-outlined group-hover:translate-x-1 transition-transform text-xl"
            >arrow_right_alt</span
          >
        </a>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      {
        projects.map((project) => (
          <ThumbnailProject
            id={project.id}
            title={project.title}
            shortDescription={project.shortDescription}
            tags={project.tags}
            githubUrl={project.githubUrl}
            liveUrl={project.liveUrl}
          />
        ))
      }
    </div>
  </div>
</section>
