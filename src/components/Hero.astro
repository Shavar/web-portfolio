---
import { Image } from 'astro:assets';
import Photo from '@/assets/images/me.png';
import Button from '@/components/Button.astro';

import classes from '@/data/commonClasses.json';
---

<section class="flex items-center relative overflow-hidden py-16" id="hero">
  <div
    class="max-w-7xl mx-auto px-6 lg:px-12 w-full grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
  >
    <div class="space-y-8 order-2 lg:order-1">
      <div class="space-y-2">
        <span
          class="inline-block text-sm font-semibold uppercase tracking-wider text-secondary-text dark:text-gray-400"
          >Senior Frontend Developer</span
        >
        <h1 class={classes.sectionHeading}>
          Building <span class="text-gray-400 dark:text-gray-600">digital products</span> that matter.
        </h1>
      </div>
      <p class="text-lg md:text-md text-secondary-text dark:text-gray-400 max-w-xl leading-relaxed">
        I help forward-thinking companies build performant, accessible, and beautiful web
        applications using the modern React ecosystem.
      </p>
      <div class="flex flex-wrap gap-4 pt-4">
        <Button style="primary" href="#work">View Recent Work</Button>
        <Button style="secondary" href="#contact">Get in Touch</Button>
      </div>
    </div>
    <div class="order-1 lg:order-2 flex justify-center lg:justify-end relative">
      <div
        class="relative w-80 h-[28rem] md:w-[28rem] md:h-[36rem] rounded-[2.5rem] overflow-hidden shadow-2xl bg-gray-100 dark:bg-gray-800 rotate-2 hover:rotate-0 transition-transform duration-500"
      >
        <Image
          src={Photo}
          alt="Portrait of John Doe"
          class="w-full h-full object-cover"
          width={448}
          height={576}
          format="avif"
          quality={85}
          loading="eager"
          densities={[1, 2]}
        />
        <div
          class="absolute bottom-0 left-0 right-0 h-1/3 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>
    </div>
  </div>
</section>
