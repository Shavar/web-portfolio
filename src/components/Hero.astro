---
import { Image } from 'astro:assets';
import Photo from '@/assets/images/me.png';
import Button from '@/components/shared/Button.astro';
import styles from '@/data/styles.json';
---

<section class="flex items-center relative overflow-hidden pt-6 pb-24" id="hero">
  <div class={`${styles.container} w-full grid grid-cols-1 lg:grid-cols-2 gap-16 items-center`}>
    <div class="space-y-8 order-2 lg:order-1">
      <div class="space-y-2">
        <span class={styles.preHeading}>Senior Frontend Developer</span>
        <h1 class={styles.sectionHeading}>
          Building <span class="text-gray-400 dark:text-gray-600">digital products</span> that matter.
        </h1>
      </div>
      <p class="text-lg md:text-md text-secondary-text dark:text-gray-400 max-w-xl leading-relaxed">
        I help forward-thinking companies build performant, accessible, and beautiful web
        applications using the modern React ecosystem.
      </p>
      <div class="flex flex-wrap gap-4 pt-4">
        <Button style="primary" href="#work">View Recent Work</Button>
        <Button style="secondary" href="#contact">Get in Touch</Button>
      </div>
    </div>
    <div class="order-1 lg:order-2 flex justify-center lg:justify-end relative">
      <div
        class="absolute inset-0 bg-gradient-to-tr from-zinc-200 to-transparent dark:from-zinc-800 rounded-[3rem] rotate-3 group-hover:rotate-6 transition-transform duration-500"
      >
      </div>
      <div
        class="absolute inset-0 border-2 border-zinc-900 dark:border-white rounded-[3rem] -rotate-2 opacity-10 group-hover:opacity-20 transition-opacity duration-500"
      >
      </div>
      <Image
        src={Photo}
        alt="Portrait of Shavar"
        format="avif"
        quality={85}
        loading="eager"
        densities={[1, 2]}
        class="relative rounded-[2rem] w-full h-[600px] object-cover transition-all duration-700 shadow-2xl rotate-2 hover:rotate-0"
      />
    </div>
  </div>
</section>
